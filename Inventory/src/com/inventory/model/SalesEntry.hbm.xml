<?xml version="1.0" encoding="UTF-8"?>  
    <!DOCTYPE hibernate-mapping PUBLIC  
            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.inventory.model">
	<class name="SalesEntry" table="SalesEntry">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="salesId" column="saleId" type="long" />
		<property name="productId" column="productId" type="long" />
		<property name="quantity" column="quantity"  type="long" />
	</class>
</hibernate-mapping>  